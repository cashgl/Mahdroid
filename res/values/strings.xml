<?xml version="1.0" encoding="utf-8"?>
<resources>

    <string name="app_name">Mahdroid</string>
    <string name="action_settings">Settings</string>
    <string name="mainTitle">Mahdroid</string>
    <string name="startGame">Start Game</string>
    <string name="goToInstructions">Instructions</string>
    <string name="addButtonName">Add</string>
    <string name="valueFieldHint">value</string>
    <string name="suitFieldHint">suit</string>
    <string name="title_activity_game">Game</string>
    <string name="title_activity_instructions">Instructions</string>
    <string name="hello_world">Hello world!</string>
    <color name="purple">#7F00FF</color>
    <color name="white">#FFFFFF</color>
    <color name="red">#FA1D2F</color>
    <color name="blue">#00B2EE</color>
    <color name="orange">#F87531</color>
    <color name="light_gray">#d3d3d3</color>
    <color name="chartreuse3">#66CD00</color>
    <color name="light_blue">#E0EEEE</color>
    <color name="light_red">#EEB4B4</color>
    <color name="light_green">#C5E3BF</color>
    <color name="light_pink">#EED2EE</color>
    <color name="black">#000000</color>
    <color name="grey">#A8A8A8</color>
    
    <style name="sideHand">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    
    <style name="sideButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/blue</item>
        <item name="android:text">@string/suitFieldHint</item>
    </style>
    
    <style name="bot2Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
 		<item name="android:layout_weight">1</item>  
 		<item name="android:background">@color/orange</item> 
 		<item name="android:text">@string/suitFieldHint</item>    
    </style>
    
    <style name="line_vert">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/light_gray</item>
    </style>
    
    <style name="line_horiz">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>
    
    <style name="line_divider_vert">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>
    
    <style name="line_divider_horiz">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginRight">-5dp</item>
        <item name="android:layout_marginLeft">-5dp</item>
    </style>
    
    <style name="discardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
 		<item name="android:layout_weight">1</item>  
 		<item name="android:background">@color/orange</item> 
 		<item name="android:text">""</item>    
    </style>
    <string name="discard">Discard:</string>

</resources>
